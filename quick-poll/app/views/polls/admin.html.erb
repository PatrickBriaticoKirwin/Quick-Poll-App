<h1 class="text-2xl font-bold mb-4">Admin Panel</h1>
<%= render "components/ui/card", options: { class: "max-w-md mx-auto" } do %>
  <%= render "components/ui/card_header" do %>
    <h2 class="text-xl font-semibold">Current Poll</h2>
  <% end %>
  <%= render "components/ui/card_content" do %>
    <p><strong>Question:</strong> <%= @poll[:question] %></p>
    <ul class="space-y-1">
      <% @poll[:options].each do |option, _| %>
        <li><%= option %>: <%= @votes[option] %> votes</li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<%= render "components/ui/card", options: { class: "max-w-md mx-auto mt-6" } do %>
  <%= render "components/ui/card_header" do %>
    <h2 class="text-xl font-semibold">Update Poll</h2>
  <% end %>
  <%= render "components/ui/card_content" do %>
    <%= form_with url: update_poll_path, method: :post, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :question, "New Question", class: "block text-sm font-medium" %>
        <%= f.text_field :question, class: "mt-1 block w-full border rounded-md p-2" %>
      </div>
      <div>
        <%= f.label :options, "Options (comma-separated)", class: "block text-sm font-medium" %>
        <%= f.text_field :options, class: "mt-1 block w-full border rounded-md p-2" %>
      </div>
      <div>
        <%= f.label :password, "Admin Password", class: "block text-sm font-medium" %>
        <%= f.password_field :password, class: "mt-1 block w-full border rounded-md p-2" %>
      </div>
      <%= render "components/ui/button", content: "Update Poll", type: "submit", variant: "default" %>
    <% end %>
  <% end %>
<% end %>
